<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DealDone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_light_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/back_light_primary</item>
        <item name="android:navigationBarColor">@color/back_light_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="new_task_edit_test_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="hintTextColor">@color/label_light_primary</item>
        <item name="android:textColorPrimary">@color/label_light_primary</item>
    </style>

    <style name="calendar_dialog_theme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
        <item name="colorAccent">@color/color_light_blue</item>
        <item name="colorOnPrimary">@color/color_light_blue</item>
        <item name="colorPrimary">@color/color_light_blue</item>
        <item name="colorPrimaryDark">@color/color_light_blue</item>
    </style>

    <style name="checkbox_theme_usual" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/support_light_separator</item>
        <item name="colorControlActivated">@color/color_light_green</item>
    </style>

    <style name="new_task_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_primary</item>
    </style>

    <style name="new_task_delete_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/color_light_red</item>
    </style>

    <style name="new_task_text_style_light">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_tertiary</item>
    </style>

    <style name="button_save_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/color_light_blue</item>
    </style>

    <style name="new_task_switch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/color_light_blue</item>
        <item name="colorSwitchThumbNormal">@color/color_light_white</item>
        <item name="colorPrimary">@color/color_light_white</item>
    </style>

    <style name="task_description">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_primary</item>
    </style>

    <style name="task_description_time">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_tertiary</item>
    </style>

    <style name="deals_bar_textview">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_tertiary</item>
    </style>

    <style name="deals_bar_title_expand">
        <item name="android:textColor">@color/label_light_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="deals_bar_title_collapsed">
        <item name="android:textColor">@color/label_light_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="add_new_task">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_light_tertiary</item>
    </style>

</resources>